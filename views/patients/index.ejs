<h2>Listado de pacientes</h2>
<table>
  <% var i; for(i=0; i < patients.length; i++) { %>
    <tr>
      <td><a href="patients/<%= patients[i].id %>"><%= patients[i].name %></a></td>
      <td><a href="patients/<%= patients[i].id %>/edit"><button>editar</button></a></td>
      <td>
        <form method="post" action="patients/<%= patients[i].id %>?_method=delete">
          <button type="submit" onClick="return confirm('Eliminar <%= patients[i].name %> del registro')">
            eliminar
          </button>
        </form>
      </td>
    </tr>
  <% } %>
  <a href="/patients/new"><button type="button">Nuevo Paciente</buttton></a>
</table>
