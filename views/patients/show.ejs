<form method="post" action="/patients/<%= patient.id %>/weight">
  <label for="wei" class="rem">Weight(*)</label>
  <input type="number" step="0.01" id="wei" name="weight[weightVal]" value="" placeholder="0.00"/></br></br>
  <input type="submit" value="<%= btnLabel %>">
</form>
</br>

<% if(patient.Weights.length){ %>
  <h3><strong>Listado de pesos</strong></h3>
  <ul>
    <% for(index in patient.Weights){ %>
    <li>
      <%= patient.Weights[index].weightValue %> Kg
      <form method="post" action="<%=patient.id %>/weight/<%=index%>?_method=delete">
        <input type="hidden" name="weight" value="<%= patient.Weights[index]%>"/>
        <button type="submit" onClick="return confirm('Eliminar <%=patient.Weights[index].weightValue %> Kg del registro')">
          eliminar peso
        </button>
      </form>
    </li>
    <% } %>
  </ul>
<% } %>
